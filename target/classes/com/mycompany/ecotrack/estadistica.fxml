<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ecotrack.main.EstadisticaController"
      spacing="12"
      style="-fx-padding:20;">

    <Label text="Estadísticas de Residuos"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <HBox spacing="32">

        <TableView fx:id="tablaEstadisticas" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" text="Tipo de Residuo" prefWidth="220"/>
                <TableColumn fx:id="colPeso" text="Peso Total (kg)" prefWidth="180"/>
            </columns>
        </TableView>

        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding:0 0 0 24;">
            <Pane fx:id="chartContainer" style="-fx-border-color: #ddd; -fx-background-color: white;" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnToggleChart" text="Mostrar Gráfica" onAction="#handleToggleChart" />
        </VBox>

    </HBox>

</VBox>
